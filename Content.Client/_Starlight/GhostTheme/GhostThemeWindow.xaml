<DefaultWindow 
    xmlns="https://spacestation14.io"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
    Title="{Loc 'ghost-gui-ghost-theme-window-title'}"
    MinSize="600 560"
    SetSize="600 560">
    <SplitContainer State="Auto" HorizontalExpand="True">
        <ScrollContainer VerticalExpand="True" HScrollEnabled="False">
			<BoxContainer Orientation="Vertical" VerticalExpand="True">
			    <LineEdit Name="Search" VerticalAlignment="Top" Margin="0 0 0 8" PlaceHolder="{Loc 'crayon-window-placeholder'}" />
                <BoxContainer Orientation="Vertical" Name="GhostThemesContainer" VerticalExpand="True" SeparationOverride="4">
                </BoxContainer>
			</BoxContainer>
        </ScrollContainer>
        <ScrollContainer VerticalExpand="True" HScrollEnabled="False">
            <BoxContainer Orientation="Vertical" Name="GhostThemeDescriptionContainer" VerticalExpand="True">
            </BoxContainer>
        </ScrollContainer>      
    </SplitContainer>
</DefaultWindow>
